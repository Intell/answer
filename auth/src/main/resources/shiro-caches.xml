<caches>

    <virtualCache>
        <name>session-Cache</name>
        <!-- 30 minutes,秒为单位 -->
        <expiration>1800</expiration>
        <allowClear>false</allowClear>
    </virtualCache>

    <virtualCache>
        <name>passwordRetryCache</name>
        <!-- 30 minutes,秒为单位 -->
        <expiration>1800</expiration>
        <allowClear>false</allowClear>
    </virtualCache>

    <virtualCache>
        <!--认证cache-->
        <name>author-Cache</name>
        <expiration>600</expiration>
        <allowClear>true</allowClear>
    </virtualCache>

    <virtualCache>
        <!--授权cache-->
        <name>authen-Cache</name>
        <expiration>1200</expiration>
        <allowClear>false</allowClear>
    </virtualCache>

</caches>
